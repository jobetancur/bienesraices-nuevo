extends ../layout/index

block content
    section
        h1(class='text-4xl my-10 font-extrabold text-center') Bienes 
            span(class='font-normal') Raices
        h2(class='text-center text-2xl font-bold')=page

        if errors
            div(class='px-4 py-3 rounded relative mt-6') 
                each error in errors
                    p(class='bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded')=error.msg

        div(class='mt-8 mx-auto max-w-md')
            div(class='bg-white py-8 px-4 shadow border rounded-lg')
                form(action='/auth/login' method='POST')
                    input(type='hidden' name='_csrf' value=csrfToken)
                    div
                        label(class='block text-gray-500 text-sm uppercase mb-2 font-bold', for='email') Email
                        input(id='email' class='w-full px-3 py-2 text-gray-700 focus:outline-none border rounded-lg focus:border-indigo-700', type='email', placeholder='Tu Email' name='email')
                    div
                        label(class='block text-gray-500 text-sm uppercase mb-2 font-bold pt-4', for='password') Password
                        input(id='passsword' class='w-full px-3 py-2 text-gray-700 focus:outline-none border rounded-lg focus:border-indigo-700', type='password', placeholder='Tu Password' name='password')
                    input(class='block w-full mt-4 text-white font-bold bg-indigo-600 hover:bg-indigo-700 py-3 px-4 rounded cursor-pointer', type='submit', value='Iniciar Sesion')
                    p(class='text-center text-sm mt-4') ¿No tienes una cuenta? 
                        a(class='text-sky-950 font-bold hover:underline', href='/auth/signup') Crear Cuenta
                    p(class='text-center text-sm mt-4') ¿Olvidaste tu Password? 
                        a(class='text-sky-950 font-bold hover:underline', href='/auth/reset-password') Recuperar Password
            
